/* * =============== 
   *      Font 
   * =============== */

/* open-sans-regular */
@font-face {
   font-display: swap;
   font-family: "Open Sans";
   font-style: normal;
   font-weight: 400;
   src: url("../../fonts/open-sans-v35-latin-regular.woff2") format("woff2");
}
/* open-sans-600 */
@font-face {
   font-display: swap;
   font-family: "Open Sans";
   font-style: normal;
   font-weight: 600;
   src: url("../../fonts/open-sans-v35-latin-600.woff2") format("woff2");
}
/* open-sans-700 - bold */
@font-face {
   font-display: swap;
   font-family: "Open Sans";
   font-style: normal;
   font-weight: 700;
   src: url("../../fonts/open-sans-v35-latin-700.woff2") format("woff2");
}

/* * =============== 
   * Global styles 
   * =============== */

:root {
   --text-fixed: #efefef;
   --primary: #234182;
   --secondary-fixed: #92b4ff;

   --text: #1c2654;
   --background: #efefef;
   --secondary: #92b4ff;
   --accent: #3264d1;

   --nav-height: 60px;

   font-size: min(1rem, 4vw);
}

.dark {
   --text: #efefef;
   --background: #1c2654;
   --secondary: #001033;
   --accent: #9db7ee;
}

* {
   scrollbar-color: var(--secondary-fixed) var(--primary);
   scrollbar-width: auto;
}

*,
*::before,
*::after {
   box-sizing: border-box;
}

:focus-visible {
   outline-offset: 3px;
}

html,
body {
   scroll-behavior: smooth;
   scroll-padding-top: 30px;
   color: var(--text);
   font-family: "Open Sans", sans-serif;
   margin: 0;
   padding: 0;
   line-height: 1.7;
   text-align: justify;
   width: 100%;
}

body {
   background-image: radial-gradient(var(--accent) 5%, var(--background) 5%);
   background-size: 4vw 4vw;
}

.col {
   flex-direction: column;
}

/* * =============== 
   *     Images 
   * =============== */

figure {
   text-align: center;
   margin: 1rem auto;
   width: fit-content;
   height: fit-content;
}

img {
   width: min(100%, 400px);
}

img:not(:only-of-type) {
   width: min(40%, 250px);
}

figcaption {
   font-size: 1rem;
}

/* * =============== 
   *   Typography 
   * =============== */

h1,
h2,
h3 {
   text-align: center;
}

h1 {
   font-size: 2.25rem;
}

h2 {
   font-size: 1.8rem;
}

p {
   text-align: justify;
   font-size: 1.3rem;
}

/* * =============== 
   *   Header/Nav 
   * =============== */

header {
   text-align: center;
   background-color: transparent;

   user-select: none;

   position: relative;
   z-index: 2;
}

#banner {
   font-size: 3rem;
   display: block;
   font-weight: bold;
   margin: 0;
   padding: 20px;
}

nav {
   background-color: var(--primary);
   height: var(--nav-height);

   & button {
      display: none;
      background-color: var(--primary);
      border: 0;
      color: var(--text-fixed);
      font-size: 1.3rem;
   }

   & :is(a, button) {
      transition: background-color 0.25s, color 0.25s, opacity 0.25s;
      cursor: pointer;
   }

   & :is(a, button):is(:hover, :focus-visible) {
      outline: transparent;
      background-color: var(--text-fixed);
      color: var(--primary);
      opacity: 0.7;
   }
}

menu {
   display: flex;
   justify-content: center;
   height: var(--nav-height);
   margin: 0;
   padding: 0;

   transition: left 0.5s ease-out;

   & > * {
      display: grid;
      place-items: center;
      text-align: center;
      padding-inline: 16px;
      text-decoration: none;
      font-size: 1rem;
      color: var(--text-fixed);
      border-top-left-radius: 50% 40%;
      border-top-right-radius: 50% 40%;

      font-weight: bold;
      opacity: 1;
   }

   & .active {
      background-color: var(--background);
      color: var(--text);
   }
}

@media screen and (max-width: 490px) {
   nav {
      display: flex;
      justify-content: center;

      & button {
         display: flex;
         align-items: center;
         justify-content: space-evenly;
      }
   }

   menu {
      position: fixed;
      flex-direction: column;
      justify-content: flex-start;
      top: 0;
      left: -100%;
      height: 100%;
      background-color: var(--primary);

      > * {
         border-radius: 0;
         height: 50px;
      }
   }

   [aria-label="Open Menu"] {
      width: 150px;
   }

   [aria-label="Open Menu"]:focus ~ menu,
   menu:is(:focus, :has(:not([aria-label="Close Menu"]):focus)) {
      left: 0;
   }

   [aria-label="Close Menu"] {
      margin-top: 10px;
      margin-bottom: 60px;
   }
}
/* * =============== 
   *    Content 
   * =============== */

main {
   margin: 0 auto 0 auto;
   display: block;
   width: min(100% - 3rem, 100ch);
   background: var(--background);
   padding-top: 10px;

   position: relative;
   z-index: 1;

   box-shadow: 0 0 20px 20px rgba(0, 0, 0, 0.5);

   & a {
      color: var(--accent);

      transition: color 0.25s;
   }

   & a:hover {
      color: var(--text);
   }
}

article {
   padding: 1rem;
}

/* * =============== 
   *     Footer 
   * =============== */

footer {
   font-size: 1rem;
   background: var(--primary);
   color: var(--text-fixed);
   padding: 10px;
   display: flex;
   justify-content: center;
   align-items: flex-start;
   padding-bottom: 60px;

   position: relative;
   z-index: 2;

   & ul {
      padding: 0 4vw;
   }

   & li {
      list-style: none;
      padding-block: 5px;

      &:first-child {
         font-size: 1.2rem;
         font-weight: 600;
         padding-bottom: 11px;
      }
   }

   & a {
      color: var(--text-fixed);
      text-decoration: none;
      position: relative;
      display: block;
      width: fit-content;
      height: fit-content;
      overflow: hidden;

      &::after {
         content: "";
         position: absolute;
         bottom: 0;
         left: -100%;
         width: 100%;
         height: 2px;
         background: var(--text-fixed);

         transition: left 0.5s cubic-bezier(0.22, 0.61, 0.36, 1);
      }

      &:is(:hover, :focus-visible) {
         outline: transparent;

         &::after {
            left: 0;
         }
      }
   }
}

/* * =============== 
   *   Basic stuff 
   * =============== */

.break {
   width: 100%;
   height: 1vw;
   background: var(--accent);
   position: relative;
}

/* * =============== 
   *    Tooltips 
   * =============== */

[data-tool-tip] {
   cursor: help;
   position: relative;
   color: var(--accent);
   font-style: italic;
   display: inline-flex;
   justify-content: center;

   &::after {
      content: attr(data-tool-tip);
      font-style: normal;
      position: absolute;
      background: var(--primary);
      padding: 0.3rem;
      color: var(--text-fixed);
      border-radius: 5px;
      white-space: nowrap;

      bottom: 0;
      opacity: 0;
      transform: scale(0);

      transition: bottom 0.5s ease, opacity 0.5s ease, transform 0.5s ease;
   }

   &:is(:hover, :focus-visible)::after {
      transform: scale(1);
      opacity: 1;
      bottom: 100%;
   }
}

/* * ===============
   * Theme switcher 
   * =============== */

#theme {
   position: fixed;
   top: -40px;
   right: 30px;
   width: 50px;
   border-bottom-left-radius: 5px;
   border-bottom-right-radius: 5px;
   border: none;
   margin: 0;
   padding: 0;

   display: flex;
   justify-content: center;
   align-items: center;

   background: var(--accent);
   color: var(--background);
   font-weight: 600;

   transition: top 0.4s ease-out;

   &:is(:has(:focus-visible), :hover) {
      top: 0;
   }

   & * {
      width: 100%;
      display: grid;
      place-items: center;
   }

   & :first-child {
      border: none;
      border-bottom: 2px solid var(--accent);
      color: var(--text);
      background: var(--secondary);
      height: 40px;
      font-size: 1.6rem;
      cursor: pointer;

      transition: background 0.25s, color 0.25s;
   }

   & :last-child {
      height: 20px;
   }
}
